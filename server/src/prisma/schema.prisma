generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  email    String @unique
  name     String
  password String
}

model Client {
  id           String    @id @default(uuid())
  organization String
  contacts     Contact[]
  Project      Project[]
}

model Contact {
  id       String  @id @default(uuid())
  name     String
  email    String
  Client   Client? @relation(fields: [clientId], references: [id])
  clientId String?
}

model Project {
  id                 String     @id @default(uuid())
  projectName        String
  projectDescription String     @db.Text
  projectStatus      String
  startDate          String
  endDate            String
  Tasks              Task[]
  Documents          Document[]
  clientName         Client     @relation(fields: [clientId], references: [id])
  clientId           String
}

model Task {
  id         String   @id @default(uuid())
  taskName   String
  taskStatus String
  dueDate    String
  Project    Project? @relation(fields: [projectId], references: [id])
  projectId  String?
}

model Document {
  id        String   @id @default(uuid())
  docUrl    String
  docName   String
  Project   Project? @relation(fields: [projectId], references: [id])
  projectId String?
}
